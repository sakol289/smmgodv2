{% include 'header.twig' %}



          <section class="bg-gradient-started">
          <div class="bg-noise"></div>
        </section>
		
		<!-- Main variables *content* -->
		<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="p_card mb-4 ">
        <h3 class="titcket-title">{{ messageList['ticket']['subject'] }} </h3>
        
        
        <div class="messages-wrapper">
            {% if messageList %}
									{% for message in messageList %}
									  {% if message["support"] == 1 %}
                                  <div class="message-container message-end">
                <div class="message-wrapper">
                  <div class="message-head">
                    <div class="date">{{ message["time"] }}</div>
                  </div>
                  <div class="message-box">{{ message["message"] }}</div>
                </div><!-- ./message-wrapper -->
              </div><!-- ./message-container (single message) -->
        
                          
                          
                          
									{% elseif message["subject"] %}		
									{% else %}
		
		
		
		
									 <div class="message-container message-start">
                <div class="message-wrapper">
                  <div class="message-head">
                    <div class="date">{{ message["time"] }}
												</div>
                  </div>
                  <div class="message-box">{{ message['message'] }}</div>
                </div><!-- ./message-wrapper -->
              </div><!-- ./message-container (single message) -->
									{% endif %}
								  {% endfor %}
								{% endif %}
								
								
								</div>
								
								
								
							
							
							{% if messageList['ticket']['canmessage'] == 2 %}
								 
								 
								 
								   <div class="row">
            <div class="col-md-12">
             <form method="post" action="tickets/{{ messageList['ticket']['ticket_id'] }}">
                 
                  {% if error %}
										<div class="alert alert-dismissible alert-danger">
										  <button type="button" class="close" data-dismiss="alert">×</button>
										  {{ errorText }}
										</div>
									  {% endif %}
									  {% if success %}
										<div class="alert alert-dismissible alert-success">
										  <button type="button" class="close" data-dismiss="alert">×</button>
										  {{ successText }}
										</div>
									  {% endif %}
                 
                                <div class="form-group panel-border-top mb-4">
                  <label for="message" class="control-label mb-2">Message</label>
                 <textarea class="form-control" rows="5" id="message" style="height:150px!important"></textarea>
                </div>
                <input type="hidden" name="_csrf" value="{{csrftoken}}">
                <button type="submit" class="btn btn-big-primary">Submit</button>
              </form>
            </div>
          </div>
              </div>{% endif %}
    </div>
  </div>
</div>
 
