{% include 'header.twig' %}



    

 <div class="wrapper-content">
    <div class="wrapper-content__header">
          </div>
    <div class="wrapper-content__body">
      <!-- Main variables *content* -->
      <div id="block_58">
    <div class="new_order-block">
        <div class="bg"></div>
        <div class="divider-top"></div>
        <div class="divider-bottom"></div>
        <div class="container">
            <div class="row mass-order__alignment">
                <div class="col-lg-12">
                     <div class="component_card">
                        <div class="card">
                            
									<form action="/child-panels" method="post">
									  {% if errorText %}
										<div class="alert alert-dismissible alert-danger">
										  <button type="button" class="close" data-dismiss="alert">×</button>
										  {{ errorText }}
										</div>
									  {% endif %}
									  {% if successText %}
										<div class="alert alert-dismissible alert-success">
										  <button type="button" class="close" data-dismiss="alert">×</button>
										  {{ successText }}
										</div>
									  {% endif %}
									  
                                      <div class="">
                                                                        <div class="form-group">
                                        <label for="domain" class="control-label">Domain</label>
                                            <input type="text" class="form-control" id="domain" name="domain" value="">
                                          </div>
                                   
                                       <!-- form-group end -->
                                       
                                        <div class="component_alert_dns">
                                        <div class="">
                                            <div class="alert alert-info">
                                                <div>Please change nameservers to:</div>
                                                <ul style="padding-left: 20px">      <li>ns1.dnsco.in</li>
                                                                            <li>ns2.dnsco.in</li>
                                                                    </ul>
                              </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label" for="createorderform-currency">Currency</label>
                                        
											<select class="form-control" name="panel_currency" aria-required="true">
                                                {% for curr in site['currencies'] %}
                                                <option value="{{ curr['name'] }}">{{curr['name']}}</option>
                                                {% endfor %}
                                            </select>
                                           </div>
                                    
                                        
                                        
                                       <!-- form-group end -->
                                       <div class="form-group">
                                        <label class="control-label" for="createorderform-username">Admin username</label>
                                             <input type="text" class="form-control" value="admin" disabled>
                                      
                                       </div>
                                       <!-- form-group end -->
                                       <div class="form-group mb-4">
                                          <label>{{ lang["childpanels.admin.password"] }}</label>
                                          <div class="input-group">
                                             <input class="form-control" value="admin@123" disabled>
                                          </div> </div>
                                      
                                       <!-- form-group end -->
                                       <div class="form-group mb-4">
                                          <label>{{ lang["childpanels.panel.amount"] }}</label>
                                          <div class="input-group">
                                             <input type="text" class="form-control" value="{{ settings['panel_price'] * currency['value']}}{{ currency['symbol'] }}" disabled>
                                          </div> </div>
                                      
									   <!-- form-group end -->
                                       <button class="btn btn-primary" type="submit">
                                            Submit order
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<br>

							


