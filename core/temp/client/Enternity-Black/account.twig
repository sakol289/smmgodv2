                                          </div>
                                    <div class="component_button_save">
                                        <div class="form-group">
                                            <label for="email" class="control-label">Email</label>
                                            
                                             <input class="form-control" type="text" value="{{ user['email'] }}" readonly>
                                         </div>
                                       
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <br>
                    
                     <div class="component_card">
                        <div class="card account-card">
                            <form class="component_form_group" method="post" action="">
                                <div class="">
                                    <div class="form-group">
                                        <label>Language</label>
                                        <div class="d-flex">
                                            <div class="w-100">
                                                
                                                
                                                	
							 {% if site['languages']|length > 1 %}
						
										  <form method="post" action="account/change_lang">

									
											  <select class="form-control" name="lang">
												  {% for language in site['languages'] %}
												  <option {% if language["code"] == user["lang"] %} selected {% endif %} value="{{ language["code"] }}">{{ language["name"] }}</option>
												  {% endfor %}
											  </select>
										

										 </div>
                                            <div class="account-button-right">
                                                <div class="component_button_save">
                                                   
                                                    <button  type="submit" class="btn btn-block btn-big-primary" type="submit">
                                                        Save
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
							  {% endif %}
							  
							  
							  <br>
							
							
							 <div class="component_card">
                        <div class="card account-card">
                            <form class="component_form_group" method="post" action="account">
