{% include 'header.twig' %}



 <div class="app-content">
	<div class="container-fluid">
        <div class="d-card dc-dash">
            <div class="row">
                <div class="col-lg-6 col-md-8 col-12">
                    <div class="py-3 px-5">
                        <div class="dch-title">
                           {{ lang['transferfunds.bank.transferToFriends'] }}
                        </div>
                        <div class="dch-text">
                         {{ lang['transferfunds.bank.transferToFriendsSmall'] }}
                        </div>
                    </div>                        
                </div>
            </div>
        </div>
        
         <section class="app-childs">
                  <div class="row">
                     <div class="col-lg-12 col-12 mb-lg-0">
								 <div class="d-card h-100">
								
									<div class="d-card-body">	
									
	
        {% if (error) %}
          <div class="alert alert-dismissible alert-danger">
            <button type="button" class="close" data-dismiss="alert">×</button>
            {{ errorText }}
          </div>
        {% endif %}
        {% if success or success_msg %}
          <div class="alert alert-dismissible alert-success">
            <button type="button" class="close" data-dismiss="alert">×</button>
            {{ successText ?? success_msg }}
          </div>
        {% endif %}
		
              <form method="post" action="transferfunds">
    
      <div class="form-group">
                      <label for="method" class="control-label">{{ lang['smmspot.transferfunds.payment.telephone.title'] }}</label>
                      <input class="form-control" name="username" placeholder="{{ lang['smmspot.transferfunds.payment.telephone.title'] }}"  required value="{{ data['username'] }}">
                  </div>
                  
                  <div class="form-group">
                      <label for="method" class="control-label">{{ lang['transferfunds.amount'] }}</label>
                      <input class="form-control" name="amount" value="{{ data['amount'] }}">
                  </div>

                <button type="submit" class="btn btn-primary" onclick="this.disabled=true;this.innerHTML='Wait...';this.form.submit();">{{ lang['smmspot.transferfunds.payment.submit.button'] }}</button>
              </form>

									</div>
							</div>
						</div>
					</div>
               </section>
            </div>
         </div>
      </div>
  

{% include 'footer.twig' %}