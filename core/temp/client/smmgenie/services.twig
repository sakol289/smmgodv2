			                    category = $(this).data('id');
			                    
			                     var category_2 = null;
			                    if(category == 'instagram'){
			                            category_2 = "انستغرام";
			                    }
			                    if(category == 'facebook'){
			                            category_2 = "فايسبوك";
			                    }
			                    if(category == 'youtube'){
