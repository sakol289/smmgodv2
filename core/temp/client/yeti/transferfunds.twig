    <div class="col-md-6">

        {% if (error) %}
          <div class="alert alert-dismissible alert-danger">
            <button type="button" class="close" data-dismiss="alert">×</button>
            {{ errorText }}
          </div>
        {% endif %}
        {% if success or success_msg %}
          <div class="alert alert-dismissible alert-success">
            <button type="button" class="close" data-dismiss="alert">×</button>
            {{ successText ?? success_msg }}
          </div>
        {% endif %}
      </div>
</div>
<div class="row">
    <div class="col-md-6">

          <div class="d-card dc-dblue">
                           <div class="d-card-body" id="dc-body">
              <form method="post" action="transferfunds">
    
      <div class="form-group">
                      <label for="method" class="control-label">{{ lang['smmspot.transferfunds.payment.telephone.title'] }}</label>
                      <input class="form-control" name="username" placeholder="{{ lang['smmspot.transferfunds.payment.telephone.title'] }}"  required value="{{ data['username'] }}">
                  </div>
                  
                  <div class="form-group">
                      <label for="method" class="control-label">{{ lang['transferfunds.amount'] }}</label>
                      <input class="form-control" name="amount" value="{{ data['amount'] }}">
                  </div>

                <button type="submit" class="btn btn-primary btn-lg btn-block mb-4" onclick="this.disabled=true;this.innerHTML='Wait...';this.form.submit();">{{ lang['smmspot.transferfunds.payment.submit.button'] }}</button>
              </form>
            </div>
          </div>
      </div>

  

</div>
