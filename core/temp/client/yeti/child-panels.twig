{% include 'header.twig' %}
         <div class="app-content">
            <!-- page-content -->
            <div class="container-fluid">
               <div class="row mt-4">
                  <div class="col-lg-12">
                     <section class="order-side">
                        <div class="row">
                           <div class="col-lg-7 col-12 mb-5 mb-lg-0">
                              <div class="d-card dc-dblue">
                                 <div class="d-card-body" id="dc-body">
									<form action="/child-panels" method="post">
									  {% if errorText %}
										<div class="alert alert-dismissible alert-danger">
										  <button type="button" class="close" data-dismiss="alert">×</button>
										  {{ errorText }}
										</div>
									  {% endif %}
									  {% if successText %}
										<div class="alert alert-dismissible alert-success">
										  <button type="button" class="close" data-dismiss="alert">×</button>
										  {{ successText }}
										</div>
									  {% endif %}
                                       <div class="form-group mb-4">
                                          <label>{{ lang["childpanels.panel.domain"] }}</label>
                                          <div class="input-group">
                                            <input type="text" class="form-control" id="domain" name="domain" value="">
                                          </div>
                                       </div>
                                       <!-- form-group end -->
                                       <div class="form-group mb-4">
                                          <label>{{ lang["childpanels.panel.currency"] }}</label>
                                          <div class="input-group">
											<select class="form-control" name="panel_currency" aria-required="true">
                                                <option value="USD">United States Dollars (USD)</option>
                                                <option value="TRY">Türk Lirası (TRY)</option>
                                                <option value="EUR">Euro (EUR)</option>
                                            </select>
                                          </div>
                                       </div>
                                       <!-- form-group end -->
                                       <div class="form-group mb-4">
                                          <label>{{ lang["childpanels.admin.username"] }}</label>
                                          <div class="input-group">
                                             <input type="text" class="form-control" value="admin" disabled>
                                          </div>
                                       </div>
                                       <!-- form-group end -->
                                       <div class="form-group mb-4">
                                          <label>{{ lang["childpanels.admin.password"] }}</label>
                                          <div class="input-group">
                                             <input class="form-control" value="admin@123" disabled>
                                          </div>
                                       </div>
                                       <!-- form-group end -->
                                       <div class="form-group mb-4">
                                          <label>{{ lang["childpanels.panel.amount"] }}</label>
                                          <div class="input-group">
                                             <input type="text" class="form-control" value="{{ settings['panel_price'] }}{{ site['currency'] }}" disabled>
                                          </div>
                                       </div>
									   <!-- form-group end -->
                                       <button type="submit" class="btn btn-primary btn-lg btn-block mb-4 mt-4">{{ lang["neworder.button"] }}</button>
                                    </form>
                                 </div>
                              </div>
                              <!-- d-card end -->
                           </div>
                           <!-- col item end-->
                           <div class="col-lg-5 col-12 mb-5 mb-lg-0">
                             
                              <div class="d-card dc-blue">
                                 <div class="d-card-body" id="dc2-body" style="overflow-y: auto;">
                                    <div class="row my-4 py-3">
                                       <div class="col-md col-12 align-self-center">
                                          <div class="rep-title">
                                             <h3>Need support?
You can ask us any questions you have in mind.</h3>
                                             {{lang['yeti.childpanel.ticket.desc']}}
                                          </div>
                                       </div>
                                       <div class="col-md-auto col-12 mt-4 mt-md-0 align-self-center">
                                          <a href="/tickets" class="btn btn-outline">{{lang["smmspot.addfunds.tickets.button"]}}</a>
                                       </div>
                                    </div>
                                 </div>
                              </div>
                              
                              <div class="d-card p-md-4 p-0 mt-4">
                                 <div class="d-card mb-4">
                                    <div class="d-card-body">
                                       <div class="row my-4 py-3">
                                          <div class="col-auto mt-4 mt-md-0 align-self-center">
                                             <img src="../img/dns.png" style="max-width:75px" alt="">
                                          </div>
                                          <div class="col align-self-center">
                                             <div style="font-size:15px">{{lang["childpanels.nameservers"]}}</div>
                                             <div style="font-size: 19px" class="mt-2">
                                                <p class="mb-0"><strong>{{ lang['smmspot.child.ns1'] }}</strong></p>
                                                <p class="mb-0"><strong>{{ lang['smmspot.child.ns2'] }}</strong></p>
                                             </div>
                                          </div>
                                       </div>
                                    </div>
                                 </div>
                               
                              </div>
                           </div>
					
                        </div>
                     </section>
                  </div>
                  <!-- page-content end -->
               </div>
               <!-- app-content -->
            </div>
         </div>

      </div>


{% include 'footer.twig' %}