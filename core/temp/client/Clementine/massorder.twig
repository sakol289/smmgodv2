{% include 'header.twig' %}



<div class="paddingbody"></div>
	<div class="container-fluid container-fluid-spacious">
		<div class="col-md-12">
			<div class="row">
				<div class="col-md-12">
					<nav>
						<ul class="nav nav-pills " id="pills-tab" role="tablist">
							<li class="nav-item active">
								<a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#new-order" role="tab" aria-controls="pills-home" aria-selected="true">New Order</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" id="pills-home-tab" data-toggle="pill" href="#check-updates" role="tab" aria-controls="pills-home" aria-selected="true">Check Updates</a>
							</li>
						</ul>
						<select name="page_Category" id="page_Category" class="custom-select w-full">
							<option value="0">New Order</option>
							<option value="1">Check Updates</option>
						</select>
					</nav>	  
				</div>
				<div class="col-md-12">
					<!-- Tab Conetent Starts here -->
					<div class="tab-content" id="pills-tabContent">
						<!-- New Order Tab -->
						<div class="tab-pane fade active in" id="new-order" role="tabpanel" aria-labelledby="pills-home-tab">
							<div id="main-page" class="well well-float table-responsive">
    
      {% if error %}
        <div class="alert alert-dismissible alert-danger {% if site['rtl'] %} rtl-alert {% endif %}">
          <button type="button" class="close" data-dismiss="alert">×</button>
          {{ errorText }}
        </div>
      {% elseif success %}
        <div class="alert alert-dismissible alert-success {% if site['rtl'] %} rtl-alert {% endif %}">
          <button type="button" class="close" data-dismiss="alert">×</button>
          {{ successText }}
        </div>
      {% endif %}

      
    
   
      
          <form method="post" action="massorder">
            <div class="form-group">
                  <br>
              <label for="quantity" class="control-label">One order per line in format</label>
              <textarea type="text" class="form-control" id="mass" name="mass" value="{{ data['mass'] }}" placeholder="service_id | quantity | link"></textarea>
            </div>
           <button type="submit" class="btn btn-default">Submit</button>
								</form>
								
							</div>
						</div>
						<!-- All Orders Tab -->
						<div class="tab-pane fade" id="check-updates" role="tabpanel" aria-labelledby="pills-contact-tab">
							<div id="main-page" class="well well-float table-responsive">
								
							</div>
						</div>
					</div>
					<!-- End Tab Content  -->
				</div>
			</div>
		</div>
	</div>


{% include 'footer.twig' %}
