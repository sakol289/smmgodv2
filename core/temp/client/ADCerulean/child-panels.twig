{% include 'header.twig' %}
         <div class="app-content">
            <!-- page-content -->
            <div class="container-fluid">
               <div class="row mt-4">
                  <div class="col-lg-12">
                     <section class="order-side">
                        <div class="row">
                           <div class="col-lg-7 col-12 mb-5 mb-lg-0">
                              <div class="g-card dc-dblue">
                                 <div class="g-card-body" id="dc-body">
									<form action="/child-panels" method="post">
									  {% if errorText %}
										<div class="alert alert-dismissible alert-danger">
										  <button type="button" class="close" data-dismiss="alert">×</button>
										  {{ errorText }}
										</div>
									  {% endif %}
									  {% if successText %}
										<div class="alert alert-dismissible alert-success">
										  <button type="button" class="close" data-dismiss="alert">×</button>
										  {{ successText }}
										</div>
									  {% endif %}
                                       <div class="form-group mb-4">
                                          <label>{{ lang["childpanels.panel.domain"] }}</label>
                                          <div class="input-group">
                                            <input type="text" class="form-control" id="domain" name="domain" value="">
                                          </div>
                                       </div>
                                       <!-- form-group end -->
                                       <div class="form-group mb-4">
                                          <label>{{ lang["childpanels.panel.currency"] }}</label>
                                          <div class="input-group">
											<select class="form-control" name="panel_currency" aria-required="true">
                                                <option value="USD">United States Dollars (USD)</option>
                                                <option value="TRY">Türk Lirası (TRY)</option>
                                                <option value="EUR">Euro (EUR)</option>
                                            </select>
                                          </div>
                                       </div>
                                       <!-- form-group end -->
                                       <div class="form-group mb-4">
                                          <label>{{ lang["childpanels.admin.username"] }}</label>
                                          <div class="input-group">
                                             <input type="text" class="form-control" value="admin" disabled>
                                          </div>
                                       </div>
                                       <!-- form-group end -->
                                       <div class="form-group mb-4">
                                          <label>{{ lang["childpanels.admin.password"] }}</label>
                                          <div class="input-group">
                                             <input class="form-control" value="admin@123" disabled>
                                          </div>
                                       </div>
                                       <!-- form-group end -->
                                       <div class="form-group mb-4">
                                          <label>{{ lang["childpanels.panel.amount"] }}</label>
                                          <div class="input-group">
                                             <input type="text" class="form-control" value="{{ settings['panel_price'] }}{{ site['currency'] }}" disabled>
                                          </div>
                                       </div>
									   <!-- form-group end -->
                                       <button type="submit" class="btn btn-primary btn-lg btn-block mb-4 mt-4">{{ lang["neworder.button"] }}</button>
                                    </form>
                                 </div>
                              </div>
                              <!-- d-card end -->
                           </div>
                           <!-- col item end-->
                           <div class="col-lg-5 col-12 mb-5 mb-lg-0">
                              <div class="g-card dc-blue">
                                 <div class="g-card-body text-white" id="dc2-body" style="overflow-y: auto;">
                                    <div class="row my-4 py-3">
                                       <div class="col-md col-12 align-self-center">
                                          <div class="rep-title">
                                             <h3>{{lang["smmspot.child.text"]}}</h3>
                                            
                                          </div>
                                       </div>
                                       
                                    </div>
                                 </div>
                              </div>
                              <div class="d-card p-md-4 p-0 mt-4">
                                 <div class="g-card mb-4">
                                    <div class="g-card-body text-white">
                                       <div class="row my-4 py-3">
                                          <div class="col-auto mt-4 mt-md-0 align-self-center">
                                             <img src="https://rexmedya.com/images/dns.png" style="max-width:75px" alt="">
                                          </div>
                                          <div class="col align-self-center">
                                             <div style="font-size:15px">{{lang["smmspot.child.ns.title"]}}:</div>
                                             <div style="font-size: 19px" class="mt-2">
                                                <p class="mb-0"><strong>dns1.namecheaphosting.com</strong></p>
                                                <p class="mb-0"><strong>dns2.namecheaphosting.com</strong></p>
                                             </div>
                                          </div>
                                       </div>
                                    </div>
                                 </div>
                                
                              </div>
                           </div>
						   {% if ticketList %}
                           <div class="col-lg-12 col-12 mb-5 mb-lg-0">
                              <div class="d-card dc-blue">
                                 <div class="d-card-body" id="dc2-body" style="overflow-y: auto;">
                                    <div class="row my-10 py-3">
                                       <div class="col-md col-12 align-self-center">
											
												<div class="row">
													<div class="col-md-8 col-md-offset-2">
														<div class="well well-float">
															<table class="table">
																<thead>
																<tr>
																	<th>{{ lang["childpanels.domain"] }}</th>
																	<th>{{ lang["childpanels.currency"] }}</th>
																	<th>{{ lang["childpanels.price"] }}</th>
																	<th>{{ lang["childpanels.created"] }}</th>
																</tr>
																</thead>
																<tbody>
													  {% for panel in ticketList %}
														<tr>
														  <td>{{ panel['panel_domain'] }}</td>
														  <td>{{ panel['panel_currency'] }}</td>
														  <td>{{ panel['panel_price'] }}</td>
														  <td><span class="nowrap">{{ panel['panel_created'] }}</span></td>
														</tr>
													  {% endfor %}
																</tbody>
															</table>
														</div>
													</div>
												</div>
											 
                                       </div>
                                    </div>
                                 </div>
                              </div>
                           </div>
						   {% endif %}
                        </div>
                     </section>
                  </div>
                  <!-- page-content end -->
               </div>
               <!-- app-content -->
            </div>
         </div>

      </div>


{% include 'footer.twig' %}