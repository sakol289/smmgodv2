{% include 'header.twig' %}


<div class="register-wrapper">
    <div class="container">
      <div class="register-box">

      {% if errorText %}
        <div class="alert alert-dismissible alert-danger">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          {{ errorText }}
        </div>
      {% endif %}
      {% if successText %}
        <div class="alert alert-dismissible alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          {{ successText }}
        </div>
      {% endif %}

     
        <form method="post" action="">
  <div class="head">
          <a href="#">Set New Password</a>
        </div>
  <div class="input-wrap">
          <strong>Username
          </strong>
          <div class="input-item">
            <span>
              <svg width="25" height="25" viewBox="0 0 25 25" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path
                  d="M12.5 14.0625C16.3818 14.0625 19.5312 10.9131 19.5312 7.03125C19.5312 3.14941 16.3818 0 12.5 0C8.61816 0 5.46875 3.14941 5.46875 7.03125C5.46875 10.9131 8.61816 14.0625 12.5 14.0625ZM18.75 15.625H16.0596C14.9756 16.123 13.7695 16.4062 12.5 16.4062C11.2305 16.4062 10.0293 16.123 8.94043 15.625H6.25C2.79785 15.625 0 18.4229 0 21.875V22.6562C0 23.9502 1.0498 25 2.34375 25H22.6562C23.9502 25 25 23.9502 25 22.6562V21.875C25 18.4229 22.2021 15.625 18.75 15.625Z"
                  fill="#333333" fill-opacity="0.84" />
              </svg>
            </span>
            <input type="text" class="fg-control" id="username" value="{{ user['username'] }}" readonly>
          </div>

  </div>
  
   <div class="input-wrap">
          <strong>Password
          </strong>
          <div class="input-item">
            <span>
              <svg width="22" height="25" viewBox="0 0 22 25" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path
                  d="M19.5312 12.5H7.42188V7.46587C7.42188 5.53227 8.96973 3.92583 10.9033 3.9063C12.8564 3.88677 14.4531 5.47368 14.4531 7.42192V8.20317C14.4531 8.85259 14.9756 9.37505 15.625 9.37505H17.1875C17.8369 9.37505 18.3594 8.85259 18.3594 8.20317V7.42192C18.3594 3.32036 15.0146 -0.0146004 10.9131 4.80722e-05C6.81152 0.0146965 3.51562 3.3936 3.51562 7.49517V12.5H2.34375C1.0498 12.5 0 13.5499 0 14.8438V22.6563C0 23.9502 1.0498 25 2.34375 25H19.5312C20.8252 25 21.875 23.9502 21.875 22.6563V14.8438C21.875 13.5499 20.8252 12.5 19.5312 12.5ZM12.8906 19.9219C12.8906 21.001 12.0166 21.875 10.9375 21.875C9.8584 21.875 8.98438 21.001 8.98438 19.9219V17.5782C8.98438 16.4991 9.8584 15.625 10.9375 15.625C12.0166 15.625 12.8906 16.4991 12.8906 17.5782V19.9219Z"
                  fill="#333333" fill-opacity="0.84" />
              </svg>
            </span>
            <input type="password" class="fg-control" id="password_new" name="password">
          </div>

        </div>
  
  
   <div class="input-wrap">
          <strong>Confirm Password
          </strong>
          <div class="input-item">
            <span>
              <svg width="22" height="25" viewBox="0 0 22 25" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path
                  d="M19.5312 12.5H7.42188V7.46587C7.42188 5.53227 8.96973 3.92583 10.9033 3.9063C12.8564 3.88677 14.4531 5.47368 14.4531 7.42192V8.20317C14.4531 8.85259 14.9756 9.37505 15.625 9.37505H17.1875C17.8369 9.37505 18.3594 8.85259 18.3594 8.20317V7.42192C18.3594 3.32036 15.0146 -0.0146004 10.9131 4.80722e-05C6.81152 0.0146965 3.51562 3.3936 3.51562 7.49517V12.5H2.34375C1.0498 12.5 0 13.5499 0 14.8438V22.6563C0 23.9502 1.0498 25 2.34375 25H19.5312C20.8252 25 21.875 23.9502 21.875 22.6563V14.8438C21.875 13.5499 20.8252 12.5 19.5312 12.5ZM12.8906 19.9219C12.8906 21.001 12.0166 21.875 10.9375 21.875C9.8584 21.875 8.98438 21.001 8.98438 19.9219V17.5782C8.98438 16.4991 9.8584 15.625 10.9375 15.625C12.0166 15.625 12.8906 16.4991 12.8906 17.5782V19.9219Z"
                  fill="#333333" fill-opacity="0.84" />
              </svg>
            </span>
            <input type="password" class="fg-control" id="password_confirm" name="password_again">
          </div>

        </div>	
    		 

            <button type="submit" class="white-btn">{{ lang['resetpassword.button'] }}</button>
        </form>
      </div>
    </div>
  </div>

{% include 'footer.twig' %}