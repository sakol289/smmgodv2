<section id="faq">
  <div class="faq__container">
   <center> <h2 class="faq__title">Frequently Asked Questions</h2></center>
<br>
    <div class="row faq-tabs-row">
      <div class="col-sm-3">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item active" role="presentation">
            <a class="nav-link" id="home-tab" data-toggle="tab" href="#tabb1" role="tab" aria-controls="home"
              aria-selected="true">New Order</a>
          </li>
          <li class="nav-item active" role="presentation">
            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#tabb2" role="tab" aria-controls="profile"
