{% include 'header.twig' %}



<section id="signup">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <h1 class="title text-center top-spacing">Sign up <span>To &nbsp;{{ site["site_name"] }}</span> </h1>
      </div>
    </div>
    <div class="row signup-frm-row">
      <div class="col-sm-12">
        <div class="col-sm-6">
          <div class="signup-img-wrap">
            <img class="signup-img" src="https://cdn.mypanel.link/9b5331/xg0j2w8ngunu0i2g.png" alt="Sign up To SmmFollows">
          </div>
        </div>
        <div class="col-sm-6">
          <div class="signup-frm-wrap">
            <form  action="/signup" method="post">
                
                
                 {% if errorText %}
								<div class="alert alert-dismissible alert-danger">
								  {{ errorText }}
								</div>
							  {% endif %}
							  {% if successText %}
								<div class="alert alert-dismissible alert-success">
								  {{ successText }}
								</div>
							  {% endif %}							
                
                                                        <div class="form-group">
                <input type="text" class="form-control" id="login" value="" name="username" placeholder="Username">
              </div>
                            <div class="form-group">
                <input type="email" class="form-control" id="email" value="{{ data['email'] }}" name="email" placeholder="Email">
              </div>
                            
                            
                            {% if settings['name_secret'] == 2 %}
                            <div class="form-group">
                <input type="text" class="form-control" id="first_name" value="{{ data['first_name'] }}" name="first_name" placeholder="First name">
              </div>
                            <div class="form-group">
                <input type="text" class="form-control" id="last_name" value="{{ data['last_name'] }}" name="last_name" placeholder="Last name">
              </div>
              {% endif %}
              
                           
                           {% if settings['skype_area'] == 2 %}
                           <div class="form-group">
                <input type="text" class="form-control" id="skype" value="{{ data['telephone'] }}" name="telephone" placeholder="Skype">
              </div>{% endif %}
                           
                           
                      
                            <div class="form-group">
                <input type="password" class="form-control" id="password" value="" name="password" placeholder="Password">
              </div>
                            <div class="form-group">
                <input type="password" class="form-control" id="password_again" value="" name="password_again" placeholder="Confirm password">
              </div>
              
              {% if captcha %}
                                          <div class="g-recaptcha form-group" data-sitekey="{{ captchaKey }}"></div>
                        {% endif %}
                        
                        
                        {% if settings['terms_checkbox'] == 2 %}
                        <div class="form-group">
                <div class="checkbox">
                  <label>
                    <input type="checkbox" class="terms-accept-checkbox" name="terms" value="1" id="customCheck1"> I have read and agreed with <a href="/terms" target="_blank">Terms of Service & Privacy Policy</a>
                  </label>
                </div>
              </div> {% endif %}
                            
              <button type="submit" class="btn btn-primary">Sign up</button>
              <br>
              <div class="txt">Already have an account? <a href="/">Sign in</a></div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>





{% for lang in site['languages'] %}
  {% if lang['active'] %}
    <script src="https://www.google.com/recaptcha/api.js?hl={{ lang['code'] }}"></script>
  {% endif %}
{% endfor %}


{% include 'footer.twig' %}