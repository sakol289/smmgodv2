{% include 'header.twig' %}



 <div class="row">
    <div class="col-sm-12">
      <div class="well">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item">
            <a class="nav-link" href="/" >New Order</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" id="home-tab" data-toggle="tab" href="#neworder" role="tab" aria-controls="home" aria-selected="true">Mass Order</a>
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade in active" id="neworder" role="tabpanel" aria-labelledby="home-tab">
              
              
    
      {% if error %}
        <div class="alert alert-dismissible alert-danger {% if site['rtl'] %} rtl-alert {% endif %}">
          <button type="button" class="close" data-dismiss="alert">×</button>
          {{ errorText }}
        </div>
      {% elseif success %}
        <div class="alert alert-dismissible alert-success {% if site['rtl'] %} rtl-alert {% endif %}">
          <button type="button" class="close" data-dismiss="alert">×</button>
          {{ successText }}
        </div>
      {% endif %}

      
    
   
      
          <form method="post" action="massorder">
            <div class="form-group">
                  <br>
              <label for="quantity" class="control-label">One order per line in format</label>
              <textarea type="text" class="form-control" id="mass" name="mass" value="{{ data['mass'] }}" placeholder="service_id | quantity | link"></textarea>
            </div>
         <button type="submit" class="btn btn-primary">Submit</button>
        </form>
          </div>
          </div>
      </div>
    </div>
  </div>
</div>

{% include 'footer.twig' %}
