{% include 'header.twig' %}


	<!-- Main variables *content* -->
		<style>#header, footer {display: none}</style>
	<section class="homeHeader">
        <div class="homeBg">
            <img src="https://cdn.mypanel.link/j71eqe/ccoiba1e61yqzyc9.png">
        </div>
  <div class="container pt-5">
    <div class="row align-items-center justify-content-center">
		<div class="col-lg-5 d-none d-md-block">
        	<div class="register-left">
            	<img src="https://cdn.mypanel.link/j71eqe/957h9654t43zs8b8.png" class="img-fluid">
                        <h1 class="hhTitle">
                                                        Rise to <span class="rotate">social media.</span>
                                                    </h1>
						<div class="row mt-4 justify-content-center">
						  <div class="col-lg-auto col-md-6 col-12 mb-4 mb-md-0">
							<a href="/services" class="btn btn-primary btn-rounded btn-100">
							  <span>Services</span>
							  <i class="ri-arrow-right-up-line ms-3"></i>
							</a>
						  </div>
						</div>
            </div>
      </div>
      <div class="col-lg-6 offset-lg-1">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <a href="/">
										<img src="{{ site["logo"] }}" class="reg-logo" height="50" alt="Best and Cheapest SMM Panel Services Provider - Amazing SMM" title="">
				             </a>
          <a href="/" class="btn btn-primary btn-sm">
Back to home
          </a>
        </div>
        <div class="card card-bg">
              <div class="card-body">
                  
                  
                   {% if errorText %}
								<div class="alert alert-dismissible alert-danger">
								  {{ errorText }}
								</div>
							  {% endif %}
							  {% if successText %}
								<div class="alert alert-dismissible alert-success">
								  {{ successText }}
								</div>
							  {% endif %}								<form action="/signup" method="post">
									
									
									                                <div class="form-group">
                <label for="login" class="control-label">Username</label>
                <input type="text" class="form-control" id="login" value="" name="username">
              </div>
                          
                          {% if settings['name_secret'] == 2 %}
                          <div class="form-group">
                <label for="first_name" class="control-label">First Name</label>
                <input type="first_name" class="form-control" id="first_name" value="{{ data['first_name'] }}" name="first_name">
              </div>
              
              <div class="form-group">
                <label for="first_name" class="control-label">Last Name</label>
                <input type="first_name" class="form-control" id="first_name" value="{{ data['last_name'] }}" name="last_name">
              </div>
              {% endif %}
                          
                          {% if settings['skype_area'] == 2 %}
                          <div class="form-group">
                <label for="telephone" class="control-label">Email</label>
                <input type="telephone" class="form-control" id="telephone" value="{{ data['telephone'] }}" name="telephone">
              </div>
                         {% endif %}
                         
                         
                          <div class="form-group">
                <label for="email" class="control-label">Email</label>
                <input type="email" class="form-control" id="email" value="{{ data['email'] }}" name="email">
              </div>
                          <div class="form-group">
                <label for="password" class="control-label">Password</label>
                <input type="password" class="form-control" id="password" value="" name="password">
              </div>
                          <div class="form-group">
                <label for="password_again" class="control-label">Confirm password</label>
                <input type="password" class="form-control" id="password_again" value="" name="password_again">
              </div>
              
              
              {% if settings['terms_checkbox'] == 2 %}
								<div class="form-group">
								  <div class="checkbox">
									<label>
									  <input type="checkbox" class="terms-accept-checkbox" value="1" id="customCheck1" name="terms"> {{ lang['signup.accept_terms_text'] }} <a href="/terms" target="_blank">{{ lang['terms.terms_of_service'] }}</a>
									</label>
								  </div>
								</div>
								{% endif %}	
								
								
                                    	{% if captcha %}
							 <div class="mt-4">
                        <div class="g-recaptcha" data-sitekey="{{ captchaKey }}"></div>
                    </div>
								{% endif %}
                        
           
            <button type="submit" class="btn btn-primary btn-100">Sign up</button>
          </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>



{% for lang in site['languages'] %}
  {% if lang['active'] %}
    <script src="https://www.google.com/recaptcha/api.js?hl={{ lang['code'] }}"></script>
  {% endif %}
{% endfor %}


{% include 'footer.twig' %}