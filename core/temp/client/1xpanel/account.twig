                                    <input type="password" id="new" name="password" class="form-control">
                                 </div>
                                 <div class="col-12 col-md-6 mb-4">
                                    <label for="form-confirm-password" class="form-label mb-2">Confirm new password</label>
                                    <input type="password" id="confirm" name="confirm_password" class="form-control">
